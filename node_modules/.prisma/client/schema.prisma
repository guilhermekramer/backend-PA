generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Gasto {
  id Int @id @default(autoincrement())
  name String
  description String
  custo Float
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id]) 
  userId Int
  itens Item[]

  
}

model Item {
  id Int @id @default(autoincrement())
  nameItem String
  type String
  quantidade Float
  valor Float
  categoria Categoria @relation(fields: [categoriaId], references: [id] )
  categoriaId Int
  gasto Gasto[]

}

model Categoria{
  id Int @id @default(autoincrement())
  name String
  description String
  items Item[]
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String?
  created_at DateTime @default(now())
  gastos Gasto[]
  
}
